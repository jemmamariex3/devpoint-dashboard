<section id="skills" class="skills">
    <div class="box skills">
        <div class="skills-1">
            <h2 class="section-title pull-left">My Skills</h2>
              <button type="button" class="btn btn-info btn-lg pull-right" ng-click="show('skill')">
                Add Skill
            </button>


            <div class="clearfix"></div>
            <div class="divide10"></div>
            <div class="row">


                <div class="col-xs-4 col-sm-2" ng-repeat="x in user.skill">
                    <!-- /.icon -->
                    <div class="text">
                        <p><i class="[[x.icon]]"></i>  [[x.name]]</p>
                        <a href ng-click="show('skill', [[x]])">Update</a>
                        <a href ng-click="deleteItem([[x.id]], 'skill')">Delete</a>

                    </div>
                    <!-- /.text -->
                </div>
            </div>
        </div>
    </div>
  {{> modals/add-skill}}

</section>
