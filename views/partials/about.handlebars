<section id="about">
    <div class="box">
        <h2 class="section-title">About Me</h2>
        <div class="row">
            <div class="col-sm-4">
                <img id='img-upload' ng-src="[[user.profileImage]]"/>
            </div>
            <div class="col-md-9">
                <div class="form-group">
                    <label>Change Image</label>
                    <div class="input-group">
                        <span class="input-group-btn">
                            <span class="btn btn-default btn-file">
                                Browseâ€¦ <input type="file" id="imgInp">
                            </span>
                        </span>
                        <!--<input type="text" class="form-control" readonly>-->
                    </div>
                </div>
            </div>
        </div>
        <!-- /.services-2 -->
        <div class="divide30"></div>
        <div class="form-container">
            <div class="response alert alert-success"></div>
            <form class="forms" name="aboutForm" ng-submit="updateUser()" method="post">
                <fieldset>
                    <div class="row">
                        <div class="col-sm-6">
                            <label>First Name</label>
                            <input type="text" name="firstName" class="text-input defaultText"
                                   ng-model="user.firstName" required/>
                            <p ng-show="aboutForm.firstName.$invalid" class="help-block">Your First Name is required.</p>
                        </div>
                        <div class="col-sm-6">
                            <label>Last Name</label>
                            <input type="text" name="lastName" class="text-input defaultText"
                                   ng-model="user.lastName" required/>
                            <p ng-show="aboutForm.lastName.$invalid" class="help-block">Your Last Name is required.</p>
                        </div>
                        <div class="col-md-12">
                            <div class="form-row text-input-row email-field">
                                <label>Email</label>
                                <input type="text" name="email" class="text-input defaultText required"
                                       ng-model="user.email" required/>
                                <p ng-show="aboutForm.email.$invalid" class="help-block">Your email is required.</p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label>Headline</label>
                            <input type="text" name="headline" class="text-input defaultText"
                                   ng-model="user.headline" required/>
                        </div>
                        <div class="col-md-12">
                            <label>Description</label>
                            <textarea name="message" class="text-area"
                                      ng-model="user.description"></textarea>
                        </div>
                        <div class="col-md-12">
                            <div class="form-row text-input-row name-field alert alert-danger" style="display:none;">
                            [[message]]
                            </div>
                            <input class="alert alert-success" ng-show="message" ng-model="message">
                        </div>
                        <div class="col-md-12">
                            <div class="button-row pull-right">
                                <input type="submit" class="btn btn-submit bm0"/>
                            </div>

                            <div class="button-row pull-right">
                                <input type="reset" value="Clear Message" name="reset" class="btn btn-submit bm0"/>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <!-- /.form-container -->

    </div>
    <!-- /.box -->
</section>
